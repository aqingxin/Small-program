/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    font-size: 16px;
}

.search{
  width: 100%;
  height: 50px;
  padding: 10px 10px;
  box-sizing: border-box;
}
.search input{
  width: 97%;
  height: 40px;
  border: 1px solid #fff;
  border-radius: 20px;
  background: white;
  padding-left:10px; 
  font-size: 0.9rem;
}
.banner{
  width: 100%;
  margin-top: 0.5rem;
}
.banner image{
   width: 100%; 
}
.btn-area{
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: space-around;
  align-items: center
}
.btn-area navigator{
  width: 33.3%;
  height: 100%;
  background: #2e68aa;
  text-align: center;
  line-height: 50px;
  color: #FFF;
}
.test{
  width: 100px;
  height: 50px;
  background: #ccc;
}
.newsong{
  width: 100%;
}
.newLi{
  width: 100%;
  height: 4rem;
  background: white;
  /* border-bottom: 1px solid #e5e5e5; */
  line-height: 4rem;
  padding-left: 10px;
  box-sizing: border-box;
  /* word-wrap: normal; */
   overflow: hidden; 
  text-overflow: ellipsis;
}
.searchResult{
  margin-top: 1rem;
}
.lists{
  width: 100%;
  background: white;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
  padding-left: 15px;
  box-sizing: border-box;
}
.lists image{
  width: 50px;
  height: 50px;
}